        blogs = data.blogs;
        console.table(blogs);
        
        //Az adatok finomítása
        blogs.forEach(element => {
            statuses.push(element["status"]);
            delete element["status"];

        });

        $("#tablazat").html(toTable(blogs, true, ["ID", "Cím", "Tartalom", "Felhasználó", "Időpont"]));
